<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN" "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config xmlns="http://java.sun.com/JSF/Configuration">
    <application>
        <locale-config>
            <default-locale>en</default-locale>
        </locale-config>
        <view-handler>com.sun.facelets.FaceletPortletViewHandler</view-handler>
    </application>
    <managed-bean>
        <managed-bean-name>userBean</managed-bean-name>
        <managed-bean-class>org.freshwaterlife.portlets.dataset.display.my.UserBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
           <property-name>solrURL</property-name>
           <!--<value>http://localhost:8080/solr</value>-->
           <value>http://172.16.0.92:8080/solr/core_all</value>
   		</managed-property>
   		<managed-property>
           <property-name>editMetadataLink</property-name>
           <value>http://new.freshwaterlife.org/web/guest/edit-data/-/dataset-edit/</value>
           <!--<value>http://localhost:8080/web/guest/test-data/-/dataset/edit/</value>-->
   		</managed-property>
   		<managed-property>
           <property-name>imagesLink</property-name>
           <value>http://new.freshwaterlife.org/datasets-management-portlet/images/</value>           
   		</managed-property>
    </managed-bean>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <to-view-id>/edit.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>help</from-outcome>
            <to-view-id>/help.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/view.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>submit</from-outcome>
            <to-view-id>/view.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>