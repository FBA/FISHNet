<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
    <portlet>
        <description>fwlSearch</description>
		<portlet-name>1</portlet-name>
        <display-name>fwlSearch</display-name>
        <portlet-class>com.sun.faces.portlet.FacesPortlet</portlet-class>
        <init-param>
            <name>com.sun.faces.portlet.INIT_VIEW</name>
            <value>/view.xhtml</value>
        </init-param>
        <init-param>
            <name>com.sun.faces.portlet.INIT_EDIT</name>
            <value>/edit.xhtml</value>
        </init-param>
        <init-param>
            <name>com.sun.faces.portlet.INIT_HELP</name>
            <value>/help.xhtml</value>
        </init-param>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
            <portlet-mode>help</portlet-mode>
        </supports>
        <portlet-info>
            <title>FreshwaterLife Search Portlet</title>
            <short-title>FreshwaterLife Search Portlet</short-title>
            <keywords>freshwaterlife, search, facelets</keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>
</portlet-app>
